@lexer

@custom 
  ID
  LITERAL
  LABEL

  ZERO_OR_MANY
  ONE_OR_MANY
  ZERO_OR_ONE

  DEFINE
  SEMICOLON

  PARSER
  LEXER
  CUSTOM ;

@parser

Spec     = Section+ ;
Section  = Parser | Lexer;
Parser   = PARSER Pdecl* ;
Pdecl    = Prule ;
Prule    = ID DEFINE Pprod+ SEMICOLON ;
Pprod    = Pterm+ Label? ;
Pterm    = ID Pcard? ;
Pcard    = ZERO_OR_MANY | ONE_OR_MANY | ZERO_OR_ONE ; 
Label    = LABEL ;

Lexer    = LEXER Ldecl* ;
Ldecl    = Lcustom ;
Lcustom  = CUSTOM ID+ SEMICOLON ;
